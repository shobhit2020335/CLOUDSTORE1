<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="customer.CustomerSignup2">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputdobsignup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_design"
            android:hint="Enter in format YYYY-MM-DD"
            android:minHeight="48dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintStart_toStartOf="@+id/password2"
            app:layout_constraintTop_toBottomOf="@+id/password2"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/password2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Date of Birth"
            android:textColor="#171414"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/inputaddresssignup"
            app:layout_constraintTop_toBottomOf="@+id/inputaddresssignup" />

        <Button
            android:id="@+id/signupbtn2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/input_design"
            android:text="Signup"
            android:textColor="#FFFFFF"
            app:backgroundTint="#E675AA"
            app:layout_constraintEnd_toEndOf="@+id/inputdobsignup"
            app:layout_constraintStart_toStartOf="@+id/inputdobsignup"
            app:layout_constraintTop_toBottomOf="@+id/inputdobsignup" />

        <TextView
            android:id="@+id/signupbtnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:text="SIGNUP"
            android:textColor="#0B0202"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputaddresssignup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_design"
            android:minHeight="48dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintStart_toStartOf="@+id/phonetxt1"
            app:layout_constraintTop_toBottomOf="@+id/phonetxt1"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/phonetxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Address"
            android:textColor="#171414"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/inputmailsignup"
            app:layout_constraintTop_toBottomOf="@+id/inputmailsignup" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputmailsignup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_design"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintStart_toStartOf="@+id/nametxt"
            app:layout_constraintTop_toBottomOf="@+id/nametxt"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/nametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:text="E-MAIL"
            android:textColor="#171414"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signupbtnlogin" />

